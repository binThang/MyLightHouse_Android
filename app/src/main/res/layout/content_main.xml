<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_marginTop="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <LinearLayout
            android:id="@+id/mainview"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/menu"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/menu"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="start|center_vertical">

                <!--<ImageView-->
                <!--android:layout_width="124dp"-->
                <!--android:layout_height="34dp"-->
                <!--android:background="@drawable/main_logo"-->
                <!--android:visibility="visible" />-->

                <TextView
                    android:id="@+id/cate1_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내 등에 기대"
                    android:textColor="#a7d2bc"
                    android:textSize="20sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/cate2_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="뻔해도 좋은"
                    android:textColor="#a7d2bc"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/cate3_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="나의 다이어리"
                    android:textColor="#a7d2bc"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <!--<ImageView-->
                <!--android:id="@+id/cate2_img"-->
                <!--android:layout_width="87dp"-->
                <!--android:layout_height="26dp"-->
                <!--android:background="@drawable/header"-->
                <!--android:visibility="gone" />-->

                <!--<ImageView-->
                <!--android:id="@+id/cate3_img"-->
                <!--android:layout_width="110dp"-->
                <!--android:layout_height="19dp"-->
                <!--android:background="@drawable/hh"-->
                <!--android:visibility="gone" />-->

                <!--<ImageView-->
                <!--android:id="@+id/cate4_img"-->
                <!--android:layout_width="114dp"-->
                <!--android:layout_height="26dp"-->
                <!--android:background="@drawable/jj"-->
                <!--android:visibility="gone" />-->

            </LinearLayout>

            <ImageView
                android:id="@+id/search"
                android:layout_width="39dp"
                android:layout_height="31dp"
                android:layout_marginRight="7dp"
                android:background="@drawable/search" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/search_ok"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/search_back"
                android:layout_width="34dp"
                android:layout_height="25dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/prev" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:background="@drawable/round_search"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <!--<RelativeLayout-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content">-->

                    <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="34dp"-->
                    <!--android:background="@drawable/round_search"-->
                    <!--android:gravity="center_vertical"-->
                    <!--android:orientation="horizontal" />-->

                    <ImageView
                        android:id="@+id/ImageView02"
                        android:layout_width="35dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/search" />

                    <EditText
                        android:id="@+id/search_edit"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginRight="30dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="검색"
                        android:inputType="text"
                        android:textColor="#313131"
                        android:textColorHint="#a9a9a9"
                        android:textSize="13dp" />

                    <ImageView
                        android:id="@+id/search_delete"
                        android:layout_width="29dp"
                        android:layout_height="29dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/search_delete"
                        android:visibility="gone" />

                    <!--</RelativeLayout>-->

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fabview"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/fab_back"
                android:layout_width="34dp"
                android:layout_height="25dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/prev" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/spin"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/fab_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="친구"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:textStyle="bold" />


                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/menu_fab" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="25dp"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="17dp"
                    android:text="나누기"
                    android:textColor="#fda119"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/spinlist_top"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/spin_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="친구"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:textStyle="bold" />


                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/menu_fab" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/del"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/delate" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_white_delete"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="#000000"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/white_delete"
                android:layout_width="38dp"
                android:layout_height="39dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/white_delete" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/li_s"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/back_s"
                android:layout_width="34dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/prev" />

            <TextView
                android:id="@+id/text_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text=""
                android:textColor="#333333"
                android:textSize="18dp"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">


        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/spinlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="324dp"
                android:layout_height="2px"
                android:layout_gravity="center_horizontal"
                android:background="#0f0f0f" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="visible"
                    tools:listitem="@layout/spinlist_item" />


            </LinearLayout>


        </LinearLayout>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/write"
            android:stateListAnimator="@null"
            app:backgroundTint="#aa353535"
            app:borderWidth="0dp"
            app:elevation="0dp" />

    </FrameLayout>


</LinearLayout>
