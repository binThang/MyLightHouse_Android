<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.ghsoft.android.lighthouse.PushActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="#ffffff"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="34dp"
                android:layout_height="25dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/prev" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="프로그램 정보"
                    android:textColor="#333333"
                    android:textSize="18dp"
                    app:fontName="custom3" />
            </LinearLayout>

            <ImageView
                android:layout_width="34dp"
                android:layout_height="25dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="10dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@drawable/shadow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/push"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:text="버전 정보"
                    android:textColor="#2e2e2e"
                    android:textSize="14dp"
                    app:fontName="custom4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text=""
                        android:textColor="#faab36"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        app:fontName="custom4" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="324dp"
                android:layout_height="1px"
                android:layout_gravity="center"
                android:background="#cccccc" />

            <LinearLayout
                android:id="@+id/topview1"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:text="이용약관"
                    android:textColor="#2e2e2e"
                    android:textSize="14dp"
                    app:fontName="custom4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ToggleButton
                        android:id="@+id/btn1"
                        android:layout_width="35dp"
                        android:layout_height="34dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/down"
                        android:stateListAnimator="@null"
                        android:textOff=""
                        android:textOn="" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="14dp"
                    android:background="#f3f3f3">

                    <TextView
                        android:id="@+id/te_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="17dp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="17dp"
                        android:layout_marginTop="17dp"
                        android:text=""
                        android:textColor="#616161"
                        android:textSize="12dp"
                        app:fontName="custom4" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="324dp"
                android:layout_height="1px"
                android:layout_gravity="center"
                android:background="#cccccc" />

            <LinearLayout
                android:id="@+id/topview2"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:text="개인정보 처리방침 및 보호정책"
                    android:textColor="#2e2e2e"
                    android:textSize="14dp"
                    app:fontName="custom4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ToggleButton
                        android:id="@+id/btn2"
                        android:layout_width="35dp"
                        android:layout_height="34dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/down"
                        android:stateListAnimator="@null"
                        android:textOff=""
                        android:textOn="" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="14dp"
                    android:background="#f3f3f3">

                    <TextView
                        android:id="@+id/te_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="17dp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="17dp"
                        android:layout_marginTop="17dp"
                        android:text=""
                        android:textColor="#616161"
                        android:textSize="12dp"
                        app:fontName="custom4" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="324dp"
                android:layout_height="1px"
                android:layout_gravity="center"
                android:background="#cccccc" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>