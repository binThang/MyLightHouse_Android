<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="34dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/prev" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="본인인증"
                android:textColor="#333333"
                android:textSize="18dp"
                app:fontName="custom3" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@drawable/shadow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/number"
                    android:layout_width="249dp"
                    android:layout_height="41dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/border_join"
                    android:hint=""
                    android:paddingLeft="11dp"
                    android:textColor="#3d3a42"
                    android:textColorHint="#bbbbbb"
                    android:textSize="13dp"
                    app:fontName="custom4" />

                <Button
                    android:id="@+id/number_btn"
                    android:layout_width="74dp"
                    android:layout_height="41dp"
                    android:background="@drawable/border_join_right"
                    android:stateListAnimator="@null"
                    android:text="인증요청"
                    android:textColor="#bbbbbb"
                    android:textSize="12dp"
                    app:fontName="custom4" />

                <Button
                    android:id="@+id/number_btn_ok"
                    android:layout_width="74dp"
                    android:layout_height="41dp"
                    android:background="#ffb445"
                    android:stateListAnimator="@null"
                    android:text="인증요청"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:visibility="gone"
                    app:fontName="custom4" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/auth"
                    android:layout_width="249dp"
                    android:layout_height="41dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/border_join"
                    android:hint="인증번호 입력란"
                    android:inputType="number"
                    android:paddingLeft="11dp"
                    android:textColor="#3d3a42"
                    android:textColorHint="#bbbbbb"
                    android:textSize="13dp"
                    app:fontName="custom4" />

                <Button
                    android:id="@+id/auth_btn"
                    android:layout_width="74dp"
                    android:layout_height="41dp"
                    android:background="@drawable/border_join_right"
                    android:stateListAnimator="@null"
                    android:text="인증확인"
                    android:textColor="#bbbbbb"
                    android:textSize="12dp"
                    app:fontName="custom4" />

                <Button
                    android:id="@+id/auth_btn_ok"
                    android:layout_width="74dp"
                    android:layout_height="41dp"
                    android:background="#ffb445"
                    android:stateListAnimator="@null"
                    android:text="인증확인"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:visibility="gone"
                    app:fontName="custom4" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="323dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/te"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="#fbae35"
                    android:textSize="12dp"
                    app:fontName="custom4" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <Button
                android:id="@+id/okok"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="#fbae35"
                android:text="다음"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                app:fontName="custom4" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>