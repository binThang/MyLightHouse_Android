<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ghsoft.android.lighthouse.NewPageActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/toptop"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="#aaffffbb"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_back" />

            <TextView
                android:id="@+id/top_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="35dp"
                android:gravity="right"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:text="gd"
                android:textColor="#a7d2bc"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/dot"
                android:layout_width="27dp"
                android:layout_height="32dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/more"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fabview"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/fab_back"
                android:layout_width="34dp"
                android:layout_height="25dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/prev" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/spin"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/fab_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="친구"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        app:fontName="custom4" />


                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/menu_fab" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="25dp"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="17dp"
                    android:text="나누기"
                    android:textColor="#fda119"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:fontName="custom4" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/spinlist_top"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/spin_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="친구"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        app:fontName="custom4" />


                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/menu_fab" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/del"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/delate" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/spinlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="324dp"
                android:layout_height="2px"
                android:layout_gravity="center_horizontal"
                android:background="#0f0f0f" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="visible"
                    tools:listitem="@layout/spinlist_item" />


            </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:id="@+id/search_white_delete"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="#000000"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/white_delete"
                android:layout_width="38dp"
                android:layout_height="39dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/white_delete" />

        </LinearLayout>


        <WebView
            android:id="@+id/webView"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


</LinearLayout>
