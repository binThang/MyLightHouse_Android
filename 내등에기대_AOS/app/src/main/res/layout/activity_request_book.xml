<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context="com.ghsoft.android.lighthouse.RequestBookActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="#ffffff"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="34dp"
                android:layout_height="25dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/prev" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="책 신청하기"
                    android:textColor="#333333"
                    android:textSize="18dp"
                    app:fontName="custom3" />
            </LinearLayout>

            <ImageView
                android:layout_width="34dp"
                android:layout_height="25dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="11dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f6f6f6"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="토니의 닉네임"
                        android:textColor="#131215"
                        android:textSize="12dp"
                        app:fontName="custom4" />


                </LinearLayout>

                <EditText
                    android:id="@+id/book_tony"
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/round_dialog"
                    android:hint="티니에게 책을 선물할 토니의 닉네임을 적어주세요."
                    android:inputType="textEmailAddress"
                    android:minHeight="40dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:textColor="#3d3a42"
                    android:textColorHint="#bbbbbb"
                    android:textSize="13dp"
                    app:fontName="custom4" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="주소"
                        android:textColor="#131215"
                        android:textSize="12dp"
                        app:fontName="custom4" />
                </LinearLayout>

                <EditText
                    android:id="@+id/book_address"
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/round_dialog"
                    android:gravity="top"
                    android:hint="티니가 책을 받으실 주소를 입력해주세요."
                    android:minHeight="40dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"
                    android:singleLine="false"
                    android:textColor="#3d3a42"
                    android:textColorHint="#bbbbbb"
                    android:textSize="13dp"
                    app:fontName="custom4" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f6f6f6"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="325dp"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">

                <Button
                    android:id="@+id/id_find"
                    android:layout_width="79dp"
                    android:layout_height="31dp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="19dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/round"
                    android:stateListAnimator="@null"
                    android:text="완료"
                    android:textColor="#b9b9b9"
                    android:textSize="14dp"
                    app:fontName="custom4" />

                <Button
                    android:id="@+id/id_find_ok"
                    android:layout_width="79dp"
                    android:layout_height="31dp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="19dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/round_ok"
                    android:stateListAnimator="@null"
                    android:text="완료"
                    android:textColor="#ffffff"
                    android:textSize="14dp"
                    android:visibility="gone"
                    app:fontName="custom4" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>