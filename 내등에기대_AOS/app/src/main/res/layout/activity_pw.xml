<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context="com.ghsoft.android.lighthouse.IDActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="34dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/prev" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="비밀번호 찾기"
                android:textColor="#333333"
                android:textSize="18dp"
                app:fontName="custom3" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@drawable/shadow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="52dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="비밀번호를 잊으셨나요?"
                    android:textColor="#131215"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:fontName="custom4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가입 시 입력 한 전호를 정확히 입력해주세요:)"
                    android:textColor="#626262"
                    android:textSize="12dp"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"
                    app:fontName="custom4" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="53dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <Button
                    android:id="@+id/bot_btn1"
                    android:layout_width="267dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="11dp"
                    android:background="@drawable/border_id"
                    android:stateListAnimator="@null"
                    android:text="전화번호로 찾기"
                    android:textColor="#333333"
                    android:textSize="14dp"
                    app:fontName="custom4" />

                <Button
                    android:id="@+id/bot_btn2"
                    android:layout_width="267dp"
                    android:layout_height="40dp"
                    android:background="@drawable/border_id"
                    android:stateListAnimator="@null"
                    android:text="이메일로 찾기"
                    android:textColor="#333333"
                    android:textSize="14dp"
                    app:fontName="custom4" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="53dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="266dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="아이디"
                                android:textColor="#131215"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                app:fontName="custom4" />


                        </LinearLayout>

                        <EditText
                            android:id="@+id/id"
                            android:layout_width="260dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="7dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="12dp"
                            android:background="@null"
                            android:hint="아이디를 입력해주세요."
                            android:inputType="textEmailAddress"
                            android:textColor="#3d3a42"
                            android:textColorHint="#bbbbbb"
                            android:textSize="13dp"
                            app:fontName="custom4" />

                        <View
                            android:layout_width="266dp"
                            android:layout_height="2px"
                            android:layout_gravity="center_horizontal"
                            android:background="#131215" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="266dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="생년월일"
                                android:textColor="#131215"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                app:fontName="custom4" />


                        </LinearLayout>

                        <EditText
                            android:id="@+id/birth"
                            android:layout_width="260dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="7dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="12dp"
                            android:background="@null"
                            android:hint="생년월일을 입력해주세요(19000101)"
                            android:inputType="number"
                            android:textColor="#3d3a42"
                            android:textColorHint="#bbbbbb"
                            android:textSize="13dp"
                            app:fontName="custom4" />

                        <View
                            android:layout_width="266dp"
                            android:layout_height="2px"
                            android:layout_gravity="center_horizontal"
                            android:background="#131215" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="266dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tttt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="휴대폰번호"
                                android:textColor="#131215"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                app:fontName="custom4" />


                        </LinearLayout>

                        <EditText
                            android:id="@+id/number"
                            android:layout_width="260dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="7dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="12dp"
                            android:background="@null"
                            android:hint="번호를 입력해주세요( - 없이)"
                            android:inputType="number"
                            android:textColor="#3d3a42"
                            android:textColorHint="#bbbbbb"
                            android:textSize="13dp"
                            app:fontName="custom4" />

                        <View
                            android:layout_width="266dp"
                            android:layout_height="2px"
                            android:layout_gravity="center_horizontal"
                            android:background="#131215" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="266dp"
                    android:layout_height="70dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/id_find"
                        android:layout_width="79dp"
                        android:layout_height="31dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="17dp"
                        android:background="@drawable/round"
                        android:stateListAnimator="@null"
                        android:text="인증요청"
                        android:textColor="#b9b9b9"
                        android:textSize="14dp"
                        app:fontName="custom4" />

                    <Button
                        android:id="@+id/id_find_ok"
                        android:layout_width="79dp"
                        android:layout_height="31dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="17dp"
                        android:background="@drawable/round_ok"
                        android:stateListAnimator="@null"
                        android:text="인증요청"
                        android:textColor="#ffffff"
                        android:textSize="14dp"
                        android:visibility="gone"
                        app:fontName="custom4" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</ScrollView>